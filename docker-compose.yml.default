version: '3.3'
services:
  data_center_vue:
    image: pmes_data_center_vue
    networks:
      - pmes
    environment:
      PORT: '44761'
    volumes:
      - "/path/to/your/frontend/dist:/server"

  ftp:
    image: fauria/vsftpd
    networks:
      - pmes
    ports:
      - '20:20'
      - '21:21'
      - '21100-21110:21100-21110'
    environment:
      FTP_USER: 'ftp_user'
      FTP_PASS: 'ftp_pass'
      PASV_ADDRESS: '127.0.0.1'
      PASV_MIN_PORT: '21100'
      PASV_MAX_PORT: '21110'
    volumes:
      - "/path/to/your/ftpdataroot:/home/vsftpd" # change to your local ftpservice data root directory on your host machine

  db:
    image: mysql:5.7
    networks:
      - pmes
    ports:
      - '44766:3306'
    environment:
      MYSQL_ROOT_PASSWORD: 'root_password'
      MYSQL_DATABASE: 'pmes_data_center'

  data_center_go:
    image: pmes_data_center_go
    depends_on:
      - db
    ports:
      - '44765:44761'
    networks:
      - pmes
    environment:
      DB_DNS: 'root:123456@tcp(db:3306)/pmes?charset=utf8mb4&parseTime=True&loc=Local'
      ENV: 'production'
    volumes:
      - "/path/to/your/gopath:/go"
      - "/path/to/your/file_cache_path:/file_cache_path"

  gateway:
    image: nginx
    depends_on:
      - backend
    networks:
      - pmes
    ports:
      - '80:80'
    volumes:
      - "/path/to/you/nginx/config:/etc/nginx/conf.d/default.conf" # change to your local nginx config

networks:
  pmes:
